@inherits Blazing.Common.ComponentControlBase

@* Generic button component that works with RelayCommands and their CanExecute state *@

<button @attributes="AdditionalAttributes" 
        @onclick="HandleClick"
        class="@GetClasses()"
        aria-label="@(AriaLabel ?? "Button")"
        title="@Title"
        type="@ButtonType"
        disabled="@IsDisabled">
    @if (Icon is not null)
    {
        @Icon
    }
    @if (!string.IsNullOrEmpty(Text))
    {
        <span>@Text</span>
    }
    @ChildContent
</button>

