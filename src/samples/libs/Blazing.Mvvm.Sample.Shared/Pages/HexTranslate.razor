@page "/hextranslate"

@attribute [ViewModelKey(nameof(HexTranslateViewModel))]
@inherits MvvmComponentBase<HexTranslateViewModel>

<PageTitle>Hex Translate</PageTitle>

<h1>Hex Translate</h1>

<HexTranslateInfo />

<div class="container text-center">
    <div class="row">
        <div class="col">
            <TextEntry />
        </div>
        <div class="col">
            <HexEntry />
        </div>
    </div>

    <button id="reset-child-inputs" class="btn btn-secondary mt-2" @onclick="ViewModel.ResetChildInputs">Clear</button>
</div>
