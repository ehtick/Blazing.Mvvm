@inherits MvvmComponentBase<Example1AsyncViewModel>

<BootstrapCard AdditionalClasses="w-100">
    <Header>
        <h3>Example 1: Async RC + Button</h3>
    </Header>
    <Body>
        <button class="btn btn-primary"
                aria-label="button"
                type="button"
                @onclick="async () => await ViewModel.ClickedCommand.ExecuteAsync(null)"
                disabled="@(!ViewModel.ClickedCommand.CanExecute(null))">
            Click Me (Async)
        </button>
        <div class="mt-2">
            <input id="example1-async-toggle" type="checkbox" @bind="ViewModel.IsDisabled" />
            <label for="example1-async-toggle">Is Disabled</label>
        </div>
    </Body>
    <Footer>
        <ConditionalSwitch>
            <When Predicate="@(() => ViewModel.ClickedCommand.IsRunning)">
                <div class="progress mt-2" role="progressbar" aria-label="Animated striped example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" style="width: 100%"></div>
                </div>
            </When>
            <Otherwise>
                <p>@ViewModel.Message</p>
            </Otherwise>
        </ConditionalSwitch>
    </Footer>
</BootstrapCard>