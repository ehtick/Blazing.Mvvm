<BootstrapCard AdditionalClasses="w-100">
    <Header>
        <h3>Pure Blazor Async</h3>
    </Header>
    <Body>
        <button class="btn btn-primary"
                aria-label="button"
                type="button"
                @onclick="OnClickAsync"
                disabled="@(_isBusy || IsChecked)">
            Click Me (Async)
        </button>
    <div class="mt-2">
            <input id="existing-async-toggle" type="checkbox" @bind="IsChecked" />
            <label for="existing-async-toggle">Is Disabled</label>
    </div>
    </Body>
    <Footer>
        <ConditionalSwitch>
            <When Condition="@(() => _isBusy)">
                <div class="progress mt-2" role="progressbar" aria-label="Animated striped example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" style="width: 100%"></div>
                </div>
            </When>
            <Otherwise>
                <p>@Message</p>
            </Otherwise>
        </ConditionalSwitch>
    </Footer>
</BootstrapCard>