@inherits MvvmComponentBase<Example2AsyncViewModel>

<BootstrapCard AdditionalClasses="w-100">
    <Header>
        <h3>Example 2: Async RC + MvvmButton</h3>
    </Header>
    <Body>
        <MvvmButton AdditionalClasses="btn btn-primary"
                    Command="ViewModel.ClickedCommand"
                    Text="Click Me (Async)"/>
        <div class="mt-2">
            <input id="example2async-toggle" type="checkbox" @bind="ViewModel.IsDisabled" />
            <label for="example2async-toggle">Is Disabled</label>
        </div>
    </Body>
    <Footer>
        <ConditionalSwitch>
            <When Predicate="@(() => ViewModel.ClickedCommand.IsRunning)">
                <div class="progress mt-2" role="progressbar" aria-label="Animated striped example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" style="width: 100%"></div>
                </div>
            </When>
            <Otherwise>
                <p>@ViewModel.Message</p>
            </Otherwise>
        </ConditionalSwitch>
    </Footer>
</BootstrapCard>